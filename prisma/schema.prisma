// Turso/Sqlite doesn't support Prisma enums...
// enum MetricType {
//   VIEW
//   GH_RATE_LIMIT
// }
// So we will use a string for now until we switch to a better DB
model Metric {
  id       String @default(uuid())
  postSlug String @id
  value BigInt @default(0)
  metricType String // MetricType
}

model Error {
  id         String   @id @default(uuid())
  message    String
  stackTrace String // @zod.coerce
  createdAt  DateTime @default(now())
}
