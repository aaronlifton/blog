---
import type { CollectionEntry } from "astro:content";
import { getMonthName, iconForTag } from "$/util";
import CodeText from "$/components/CodeText.astro";
import HomeImage from "$/components/HomeImage.astro";
import SampleCode from "$/components/SampleCode.astro";
import ReadPostButton from "$/components/ReadPostButton.astro";
interface Props {
  post: CollectionEntry<"blog">;
  asCard?: boolean;
}

const {
  post: { data: post, slug },
  asCard = false,
} = Astro.props;
const colors = ["purple", "fuchsia", "indigo", "rose"];
---

