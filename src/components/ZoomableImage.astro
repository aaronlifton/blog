---
import ReactZoomableImage from "$components/react/ZoomableImage.tsx";

interface Props {
  src?: string;
  alt?: string;
  caption?: string;
  // dialogId: string;
  children: React.ReactElement;
  className?: string;
}

const { children, className } = Astro.props;
const zoomProps = ({ src, alt, caption } = Astro.props);
---

<ReactZoomableImage {...zoomProps} client:load>
  <slot />
</ReactZoomableImage>
