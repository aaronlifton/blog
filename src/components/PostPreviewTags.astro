---
import { iconForTag } from "$/util";
import { Icon } from "astro-icon/components";

interface Props {
  tags: string[];
}

const { tags }: Props = Astro.props;
---

<div class="post-preview__tags">
  {
    tags
    && tags.map((tag, idx) => (
      <span class="tag mr-1">
        <a href={`/tags/${tag}/1`}>
          {
            iconForTag(tag) && (
              <Icon
                name={iconForTag(tag)}
                class="fill-theme-primary stroke-primary"
              />
            )
          }
          {tag}
        </a>
        {idx !== tags.length - 1 && ", "}
      </span>
    ))
  }
</div>
<style>
.post-preview__tags {
  @apply relative left-0 top-0;
  a svg {
    @apply fill-theme-primary stroke-primary text-primary;
    display: inline;
    width: 16px;
    height: 16px;
    vertical-align: middle;
    transform: translate(0, -0.1ch);
  }
}
</style>
