---
import HeaderLink from "./HeaderLink.astro";
import { Icon } from "astro-icon/components";
import { SITE_TITLE } from "../consts";
---

<header class="grid grid-cols-layout antialiased">
  <nav class="h-nav-height sm:col-content">
    <h2>
      <a href="/">{SITE_TITLE}</a>
    </h2>
    <div class="internal-links select-none">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog/1">Blog</HeaderLink>
      <HeaderLink href="/tags">Tags</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="social-links select-none">
      <a href="https://linkedin.com/in/aaronlifton" target="_blank">
        <span class="sr-only"
          >Are you a recruiter? Connect with Aaron on LinkedIn</span
        >
        <Icon name="linkedin" width={32} height={32} />
      </a>
      <a href="https://github.com/aaronlifton" target="_blank">
        <span class="sr-only">Go to Aaron's GitHub repo</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width={32} height={32}
          ><path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path></svg
        >
      </a>
    </div>
  </nav>
</header>
<style>
  header {
    @apply bg-header-bg text-header-text;
  }
  nav {
    @apply flex max-w-[100ch] items-center justify-between transition-colors
      duration-300 ease-in-out;
  }
  nav a {
    padding: 1em 0.5em;
    /*color: var(--black);*/
    @apply text-header-text decoration-card-link;
    border-bottom: 4px solid transparent;
  }
  h2 {
    @apply mx-0 px-0;
    margin: 0;
    font-size: 1em;
  }

  h2 a {
    @apply mx-0 px-0 font-bold underline decoration-gray-600 underline-offset-2;
  }
  nav .social-links {
    @apply flex;
    a {
      @apply flex no-underline;
      &:hover {
        svg {
          @apply text-purple-400;
        }
      }
    }
  }
  nav .internal-links a {
    @apply -translate-x-2/4 underline decoration-primary/0 underline-offset-8;
    &.active {
      @apply decoration-purple-400;
    }
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
  svg:hover {
    @apply text-primary;
  }
</style>
