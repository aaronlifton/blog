---
import { Icon } from "astro-icon/components";
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
// import ThemeToggle from "$components/react/ThemeToggle";
import IconButton from "$components/react/IconButton";
import { menuItems } from "$util/menu";
import HamburgerMenu from "./HamburgerMenu.astro";
---

<header class="grid antialiased grid-cols-layout">
  <nav class="h-nav-height sm:col-content">
    <h2
      class:list={[
        "overflow-hidden",
        // "bg-amethyst-100 dark:bg-gray-50",
        "before:opacity-100",
        "before:absolute",
        "before:inset-0",
        "before:-translate-x-full",
        "before:animate-[shimmer_2s_infinite]",
        "before:border-t",
        "before:border-amethyst-300/30",
        "before:bg-gradient-to-r",
        "before:from-transparent",
        "before:via-amethyst-300",
        "after:opacity-100",
        "after:absolute",
        "after:inset-0",
        "after:-z-10",
        // "after:bg-amethyst-300",
        // "dark:after:bg-amethyst-200",
      ]}
    >
      <a href="/">
        {SITE_TITLE}
      </a>
    </h2>
    <div class="hidden select-none sm:flex internal-links">
      {
        menuItems.map((item) => (
          <HeaderLink href={item.pathname}>{item.name}</HeaderLink>
        ))
      }
    </div>

    <div class="select-none social-links">
      <a href="https://linkedin.com/in/aaronlifton" target="_blank">
        <span class="sr-only">Are you a recruiter? Connect with Aaron on
          LinkedIn</span>
        <Icon
          name="linkedin"
          width={32}
          height={32}
          class="scale-75 sm:scale-100"
        />
      </a>
      <a href="https://github.com/aaronlifton" target="_blank">
        <span class="sr-only">Go to Aaron's GitHub repo</span>
        <svg
          viewBox="0 0 16 16"
          aria-hidden="true"
          width={32}
          height={32}
          class="scale-75 sm:scale-100"
        >
          <path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          >
          </path>
        </svg>
      </a>
      <IconButton
        className="cursor-pointer sm:hidden mr-[-32px] pr-[16px]"
        data-hamburger-btn
        data-a11y-dialog-show="sidenav"
        variant="menu"
      >
        <Icon
          name="tabler/menu2"
          width={32}
          height={32}
          class="scale-75 sm:scale-100"
        />
      </IconButton>
    </div>
  </nav>
  <HamburgerMenu />

  <style>
  header {
    @apply bg-header-bg text-header-text;
  }
  nav {
    @apply flex items-center justify-between transition-colors duration-300
    ease-in-out;
  }
  nav a {
    padding: 1em 0.5em;
    /*color: var(--black);*/
    @apply text-header-text decoration-card-link;
    border-bottom: 4px solid transparent;
  }
  h2 {
    @apply mx-0 px-0;
    margin: 0;
    font-size: 1em;

    span {
      background: var(--pink-to-highlight-to-purple-to-blue-horizontal-gradient);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      font-size: 0.875rem;
      margin-block: 0;
      transition: background-position 1.8s ease-out;
      background-size: 200% 100%;
      background-position: 100% 0%;
      position: relative;
    }
    &:hover {
      span {
        background-position: 0% 0%;
      }
    }
  }
  .shimmering {
    background: var(--pink-to-highlight-to-purple-to-blue-horizontal-gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    font-size: 0.875rem;
    margin-block: 0;
    transition: background-position 1.8s ease-out;
    background-size: 200% 100%;
    background-position: 100% 0%;
    position: relative;
    --selection-background: var(--hot-pink);
    --selection-color: var(--hot-pink);
  }

  h2 a {
    @apply mx-0 px-0 font-bold underline decoration-gray-600 underline-offset-2
    transition transition-colors duration-500 ease-in-out
    hover:decoration-purple-400 active:decoration-purple-400;
  }
  nav .social-links {
    @apply flex;
    a {
      @apply flex no-underline;
      &:hover {
        svg {
          @apply text-purple-400;
        }
      }
    }
  }
  nav .internal-links a {
    @apply underline decoration-primary/0 underline-offset-8;
    &.active {
      @apply decoration-purple-400;
    }
  }

  svg:hover {
    @apply text-primary;
  }
  [data-hamburger-btn] {
    &:hover, svg {
      @apply text-white;
    }
  }
  </style>
</header>
