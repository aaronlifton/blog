---
import "../styles/global.css";
// import "@fontsource/source-sans-pro/400.css";
// import "@fontsource/source-sans-pro/700.css";
import "@fontsource/comic-mono";
import { ViewTransitions } from "astro:transitions";
import { format } from "date-fns";

interface Props {
  title: string;
  description: string;
  cover?: string;
  pubDate?: Date;
  // coverAlt: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, cover, pubDate } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link
  rel="preload"
  href="/fonts/atkinson-regular.woff"
  as="font"
  type="font/woff"
  crossorigin
/>
<link
  rel="preload"
  href="/fonts/atkinson-bold.woff"
  as="font"
  type="font/woff"
  crossorigin
/>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
{cover && <meta property="og:image" content={new URL(cover, Astro.url)} />}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
{cover && <meta property="twitter:image" content={new URL(cover, Astro.url)} />}

<meta name="theme-color" content="#fcfafe" />
{
  pubDate && (
    <meta name="publish-date" content={format(pubDate, "yyyy-MM-dd")} />
  )
}
<ViewTransitions />
