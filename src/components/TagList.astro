---
import { Icon } from "astro-icon/components";
import { iconForTag } from "$/util";

interface Props {
  tags: string[];
}
const { tags }: Props = Astro.props;
---

<div class="mb-4 text-center">
  <slot name="header" />
  <ul class="tag-list">
    {
      tags.map((tag) => (
        <li>
          <a
            class="tag"
            href={`/tags/${tag}`}
            title={`View posts tagged under "${tag}"`}
            transition:animate="slide"
            style="display: inline-block;"
          >
            {iconForTag(tag) && <Icon name={iconForTag(tag)} />}
            <span>{tag}</span>
          </a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .tag-list {
    @apply list-none flex gap-2 flex-wrap justify-center mb-4;
    .tag {
      @apply inline-block text-xl px-4 py-1 rounded-full text-theme-primary bg-theme-dark-primary 
          hover:bg-theme-primary hover:text-theme-amethyst-100 hover:no-underline
          dark:bg-theme-primary dark:text-theme-dark-primary 
          dark:hover:bg-theme-dark-primary dark:hover:text-theme-primary;
      svg {
        display: inline-block;
        @apply text-theme-primary stroke-theme-primary;
        g {
          @apply stroke-theme-primary;
        }
        * {
          @apply stroke-theme-primary bg-red-400 fill-red-300;
        }
      }
      &:hover {
        * {
          @apply text-theme-amethyst-200;
        }
        span {
          @apply underline underline-offset-2 decoration-theme-amethyst-300;
        }
        svg,
        g {
          @apply stroke-theme-amethyst-200;
        }
      }
    }
  }
</style>
