---
import { Icon } from "astro-icon/components";
import { iconForTag } from "$/util";

interface Props {
  tags: string[];
}

let { tags }: Props = Astro.props;
---

<div class="tags center mx-auto flex w-full max-w-xl justify-center">
  {
    tags &&
      tags.map((tag, idx) => (
        <span class="tag mr-1">
          <a href={`/tags/${tag}/1`}>
            {iconForTag(tag) && (
              <Icon
                name={iconForTag(tag)}
                class="fill-theme-primary stroke-primary"
              />
            )}
            {tag}
          </a>
          {idx !== tags.length - 1 && ", "}
        </span>
      ))
  }
</div>
<style>
  .tags {
    @apply mb-0 mt-4;
    a svg {
      @apply fill-theme-primary stroke-primary text-primary;
      display: inline;
      width: 16px;
      height: 16px;
      vertical-align: middle;
      transform: translate(0, -0.1ch);
    }
  }
</style>
